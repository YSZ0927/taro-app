.add-new-state{
  padding: 20px 30px
  &_text{
    margin: 40px 0
  }
  .at-textarea{
    border: none
  }
  &_tag{
    margin-top: 30px
    .tag-item{
      margin: 20px 10px
    }
    .at-tag--active.at-tag--primary{
      background: #333
      border: 1px solid #333
    }
  }
  &_btn{
    position: fixed
    bottom: 100px
    width: 100%
    text-align: center
    left 0
    .add-btn{
      background: #333
      width: 90%
    }
  }
}