.user{
  background: #f8f8f8
  &_info{
    background: #fff
    height:240px
    position relative
    padding: 40px 30px
    margin-bottom: 20px
    .name{
      position: absolute
      left: 30px
      top: 40px
      font-size: 64px
    }
    .notice{
      position: absolute
      left 30px
      bottom: 30px
      font-size: 28px
      color #ccc
    }
    image{
      position: absolute
      top: 40px
      right: 30px
      width: 150px
      height:150px
      border-radius: 50%
    }
  }
  &_nav{
    background: #fff
    padding: 40px 30px
    .nav-list{
      padding 20px 0
      font-size: 32px
      border-bottom: 1px solid #f8f8f8
    }
  }
  &_new-state{
    position: absolute
    border-radius: 50%
    line-height: 100px
    width: 100px
    text-align: center
    background: rgba(0,0,0,.5)
    color: #fff
    bottom 20px
    right: 20px
  }
}
.wechat-login{
  text-align: center
  font-size: 32px
  height: 100vh
  .text{
    margin-top: 100px
    padding: 60px 0;
  }
  .wechat-btn{
    width: 90%
    height: 90px
    font-size: 32px
    margin: 30px auto;
    background: #292929
    border: none
  }
}